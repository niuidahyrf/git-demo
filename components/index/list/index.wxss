/* components/index/list/index.wxss */

.article{
  font-size:28rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.article .items{
  width:47%;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  margin: 30rpx 2% 0 2%;
}
.article .items:nth-child(2n+1){
  margin-right:0;
}
.items image{
  width:100%;
  height:300rpx;
}
.items text{
  display: inline-block;
  width: 90%;
  margin:16rpx auto;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size:26rpx;
  color:#333;
}
.items .answer{
  margin-left: 6%;
  margin-bottom:20rpx;
}
